{
  "name": "@dalgu/react-toast",
  "description": "A built-in global-state-management toast notification library for React web application",
  "version": "0.1.23",
  "author": "KyungHwan Kim",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "react",
    "toast",
    "toast-notification"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dalgudot/react-toast"
  },
  "homepage": "https://github.com/dalgudot/react-toast#readme",
  "bugs": {
    "url": "https://github.com/dalgudot/react-toast/issues"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "module": "dist/toast.esm.js",
  "size-limit": [
    {
      "path": "dist/toast.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/toast.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.4",
    "husky": "^7.0.4",
    "size-limit": "^6.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1"
  },
  "dependencies": {
    "framer-motion": "^4.1.17",
    "styled-components": "^5.3.3"
  }
}
